{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "agssearch",
            "banner",
            "basemaptoggler",
            "languagetoggler",
            "locateme",
            "locator-store",
            "map-init",
            "map-preload-3D",
            "mapnavigation",
            "measurement-3d",
            "notifier",
            "parameter-url",
            "popups-default",
            "printing",
            "result-ui",
            "scalebar",
            "search-ui",
            "selection-ui",
            "sketching",
            "splashscreen",
            "system",
            "template-seasons",
            "templatelayout",
            "theme-autumn",
            "toc",
            "toolset",
            "dn_imprintprivacy",
            "dn_lineofsight"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "agssearch": {
            "AutoStoreRegistration": {
                "componentEnabled": true
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "resource('${app}:/assets/logo.svg')",
                "imageWidth": 150,
                "imagePosition": "above",
                "link": "http://conterra.github.io"
            }
        },
        "basemaptoggler": {
            "Config": {
                "itemStyles": {
                    "gray": "icon-thumbnail",
                    "streets": "icon-thumbnail",
                    "satellite": "icon-thumbnail",
                    "hybrid": "icon-thumbnail"
                }
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "gray",
                        "basemap": "gray-vector",
                        "title": "${map.basemaps.gray}",
                        "thumbnailUrl": "resource('${app}:/assets/gray.png')",
                        "selected": true
                    },
                    {
                        "id": "streets",
                        "basemap": "streets-vector",
                        "title": "${map.basemaps.streets}",
                        "thumbnailUrl": "resource('${app}:/assets/streets.png')"
                    },
                    {
                        "id": "satellite",
                        "basemap": "satellite",
                        "title": "${map.basemaps.topo}",
                        "thumbnailUrl": "resource('${app}:/assets/topo.png')"
                    },
                    {
                        "id": "hybrid",
                        "basemap": "hybrid",
                        "title": "${map.basemaps.hybrid}",
                        "thumbnailUrl": "resource('${app}:/assets/hybrid.png')"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "buildings",
                            "type": "AGS_SCENE",
                            "url": "https://services2.arcgis.com/cFEFS0EWrhfDeVw9/arcgis/rest/services/STM____FR_Lyon__Textured_buildings/SceneServer"
                        }
                    ],
                    "ground": [
                        {
                            "url": "https://tiles.arcgis.com/tiles/cFEFS0EWrhfDeVw9/arcgis/rest/services/ELEV____FR_Lyon__Elevation/ImageServer",
                            "type": "ELEVATION"
                        },
                        {
                            "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                            "type": "ELEVATION"
                        }
                    ]
                },
                "view": {
                    "viewmode": "3D",
                    "camera": {
                        "heading": 136.870179464322,
                        "tilt": 79.7964462504739,
                        "position": {
                            "x": 536508.428229189,
                            "y": 5742784.27106477,
                            "z": 365.899003159255,
                            "spatialReference": {
                                "wkid": 3857
                            }
                        }
                    }
                }
            }
        },
        "toc": {
            "Config": {
                "showBasemaps": true,
                "showLayerLegend": true
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "lineOfSightToggleTool"
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "lineOfSightToggleTool",
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted",
                        "tooltipPositions": [
                            "before",
                            "above",
                            "below",
                            "after"
                        ]
                    },
                    {
                        "id": "drawer_left",
                        "title": "${tools.drawerLeft}",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "selection-ui-tool",
                            "sketchToggleTool",
                            "measuring_tools",
                            "printingToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left",
                        "tooltipPositions": [
                            "after",
                            "above",
                            "below",
                            "before"
                        ]
                    },
                    {
                        "id": "measuring_tools",
                        "title": "${tools.measuring}",
                        "iconClass": "icon-editor-table",
                        "tools": [
                            "distanceMeasurement3DToggleTool",
                            "areaMeasurement3DToggleTool"
                        ],
                        "container": "ignore",
                        "registerTool": true,
                        "windowType": "menuitem",
                        "tooltipPositions": [
                            "after"
                        ]
                    }
                ]
            }
        },
        "dn_imprintprivacy": {
            "ToolHandler": {
                "imprintUrls": [
                    {
                        "locale": "de",
                        "url": "https://www.conterra.de/impressum"
                    },
                    {
                        "locale": "en",
                        "url": "https://www.con-terra.com/imprint"
                    }
                ],
                "privacyUrls": [
                    {
                        "locale": "de",
                        "url": "https://www.conterra.de/datenschutzhinweise"
                    },
                    {
                        "locale": "en",
                        "url": "https://www.con-terra.com/privacy-statements"
                    }
                ],
                "toolsetDefinition": {
                    "id": "imprintprivacyToolset",
                    "tools": [
                        "imprintTool",
                        "privacyStatementsTool"
                    ],
                    "registerWidget": {
                        "widgetRole": "footer_right"
                    },
                    "container": "ignore",
                    "windowType": "container",
                    "cssClass": "showToolLabels"
                }
            }
        }
    }
}
