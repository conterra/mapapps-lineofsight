{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "banner",
            "console",
            "locateme",
            "locator-store",
            "map-init",
            "map-preload-3D",
            "mapnavigation",
            "notifier",
            "omnisearch",
            "popups-default",
            "scalebar",
            "splashscreen",
            "system",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-autumn",
            "toolrules",
            "toolset",
            "dn_lineofsight"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://developernetwork.conterra.de"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "topo",
                        "title": "Topo",
                        "selected": true,
                        "basemap": "topo-vector"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "buildings",
                            "type": "AGS_SCENE",
                            "url": "https://services2.arcgis.com/cFEFS0EWrhfDeVw9/arcgis/rest/services/STM____FR_Lyon__Textured_buildings/SceneServer"
                        }
                    ],
                    "ground": [
                        {
                            "url": "https://tiles.arcgis.com/tiles/cFEFS0EWrhfDeVw9/arcgis/rest/services/ELEV____FR_Lyon__Elevation/ImageServer",
                            "type": "ELEVATION"
                        },
                        {
                            "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                            "type": "ELEVATION"
                        }
                    ]
                },
                "view": {
                    "viewmode": "3D",
                    "camera": {
                        "heading": 136.870179464322,
                        "tilt": 79.7964462504739,
                        "position": {
                            "x": 536508.428229189,
                            "y": 5742784.27106477,
                            "z": 365.899003159255,
                            "spatialReference": {
                                "wkid": 3857
                            }
                        }
                    }
                }
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            },
                            {
                                "widgetRole": "legend",
                                "sublayout": [
                                    "mobile_portrait",
                                    "mobile_landscape"
                                ],
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "banner",
                                "sublayout": [
                                    "mobile_portrait"
                                ],
                                "attachTo": "header_right"
                            }
                        ]
                    }
                ]
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "autumn"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "lineOfSightToggleTool",
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "lineOfSightToggleTool"
                ]
            }
        }
    }
}
